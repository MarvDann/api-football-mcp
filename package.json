{
  "name": "api-football-mcp",
  "version": "1.0.0",
  "description": "MCP server for API-Football providing comprehensive Premier League data access",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:contract": "vitest tests/contract",
    "test:integration": "vitest tests/integration",
    "test:unit": "vitest tests/unit",
    "test:performance": "vitest tests/performance",
    "lint": "eslint src tests --fix",
    "lint:check": "eslint src tests",
    "check-types": "tsc --noEmit",
    "check-types:watch": "tsc --noEmit --watch",
    "type-coverage": "tsc --noEmit --listFiles | wc -l",
    "cli:api": "node dist/cli/api-client.js",
    "cli:cache": "node dist/cli/cache.js",
    "cli:tools": "node dist/cli/tools.js",
    "cli:server": "node dist/cli/server.js",
    "start": "node dist/server.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "api-football",
    "premier-league",
    "football",
    "soccer",
    "typescript"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "pino": "^9.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.0.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}