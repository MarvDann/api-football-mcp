{
  "tools": [
    {
      "name": "get_standings",
      "description": "Get current or historical Premier League standings",
      "inputSchema": {
        "type": "object",
        "properties": {
          "season": {
            "type": "number",
            "description": "Season year (e.g., 2024 for 2024-25 season). Defaults to current season.",
            "minimum": 1992,
            "maximum": 2025
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "standings": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Standing"
            }
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    {
      "name": "get_fixtures",
      "description": "Get fixtures by date range, team, or status",
      "inputSchema": {
        "type": "object",
        "properties": {
          "season": {
            "type": "number",
            "description": "Season year"
          },
          "teamId": {
            "type": "number",
            "description": "Filter by team ID"
          },
          "from": {
            "type": "string",
            "format": "date",
            "description": "Start date (YYYY-MM-DD)"
          },
          "to": {
            "type": "string",
            "format": "date",
            "description": "End date (YYYY-MM-DD)"
          },
          "status": {
            "type": "string",
            "enum": ["NS", "1H", "HT", "2H", "FT", "LIVE"],
            "description": "Filter by match status"
          },
          "limit": {
            "type": "number",
            "description": "Maximum number of fixtures to return",
            "default": 50,
            "maximum": 100
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "fixtures": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Fixture"
            }
          },
          "total": {
            "type": "number"
          }
        }
      }
    },
    {
      "name": "get_team",
      "description": "Get detailed team information",
      "inputSchema": {
        "type": "object",
        "properties": {
          "teamId": {
            "type": "number",
            "description": "Team ID (optional if name provided)"
          },
          "name": {
            "type": "string",
            "description": "Team name (optional if ID provided)"
          },
          "season": {
            "type": "number",
            "description": "Season year for squad information"
          }
        },
        "anyOf": [
          {"required": ["teamId"]},
          {"required": ["name"]}
        ]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "team": {
            "$ref": "#/definitions/Team"
          },
          "squad": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Player"
            }
          }
        }
      }
    },
    {
      "name": "get_player",
      "description": "Get detailed player information and statistics",
      "inputSchema": {
        "type": "object",
        "properties": {
          "playerId": {
            "type": "number",
            "description": "Player ID (optional if name provided)"
          },
          "name": {
            "type": "string",
            "description": "Player name (optional if ID provided)"
          },
          "season": {
            "type": "number",
            "description": "Season year for statistics"
          }
        },
        "anyOf": [
          {"required": ["playerId"]},
          {"required": ["name"]}
        ]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "player": {
            "$ref": "#/definitions/Player"
          },
          "statistics": {
            "$ref": "#/definitions/PlayerStatistics"
          }
        }
      }
    },
    {
      "name": "get_match_events",
      "description": "Get events from a specific match",
      "inputSchema": {
        "type": "object",
        "properties": {
          "fixtureId": {
            "type": "number",
            "description": "Fixture/Match ID"
          }
        },
        "required": ["fixtureId"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "fixture": {
            "$ref": "#/definitions/Fixture"
          },
          "events": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/MatchEvent"
            }
          }
        }
      }
    },
    {
      "name": "search_teams",
      "description": "Search for teams by name or get all EPL teams for a season",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query for team name"
          },
          "season": {
            "type": "number",
            "description": "Season year to get all teams from"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Team"
            }
          },
          "total": {
            "type": "number"
          }
        }
      }
    },
    {
      "name": "search_players",
      "description": "Search for players by name or position",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query for player name"
          },
          "teamId": {
            "type": "number",
            "description": "Filter by team ID"
          },
          "position": {
            "type": "string",
            "enum": ["Goalkeeper", "Defender", "Midfielder", "Attacker"],
            "description": "Filter by position"
          },
          "season": {
            "type": "number",
            "description": "Season year"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Player"
            }
          },
          "total": {
            "type": "number"
          }
        }
      }
    },
    {
      "name": "get_live_matches",
      "description": "Get all currently live Premier League matches",
      "inputSchema": {
        "type": "object",
        "properties": {}
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "fixtures": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Fixture"
            }
          },
          "total": {
            "type": "number"
          }
        }
      }
    }
  ],
  "definitions": {
